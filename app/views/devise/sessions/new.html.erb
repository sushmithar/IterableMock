<%= stylesheet_link_tag "devise/new", "data-turbo-track": "reload" %>
<div id="form-div" class="field">
  <h2 class="title is-3">Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :email, class: "label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input is-medium" %>
    </div>

    <div class="field control has-icons-left has-icons-right">
      <%= f.label :password, class: "label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "input is-medium" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <div class="control">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me, class: "checkbox" %>
        </div>
      </div>
    <% end %>

    <div class="buttons">
      <%= f.submit "Log in", class:"button is-danger" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
